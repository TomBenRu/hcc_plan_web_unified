# =============================================================================
# HCC Plan Web Unified - Development Environment Configuration
# =============================================================================
# ACHTUNG: Diese Datei enthält sensible Daten und wird NICHT in Git committed!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=HCC Plan Web Unified
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///data/hcc_plan.sqlite

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# DEVELOPMENT SECRET KEY - NICHT FÜR PRODUCTION VERWENDEN!
SECRET_KEY=dev-secret-key-change-for-production-use-secrets-token-urlsafe

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# SMTP / E-Mail Configuration
# -----------------------------------------------------------------------------
# TODO: Fülle diese Werte mit deinen SMTP-Zugangsdaten aus
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@hccplan.de
SMTP_FROM_NAME=HCC Plan System

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# APScheduler Settings
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=True
REMINDER_SCHEDULE_HOUR=8
REMINDER_SCHEDULE_MINUTE=0

# -----------------------------------------------------------------------------
# WebSocket Settings (für Phase 8)
# -----------------------------------------------------------------------------
WEBSOCKET_ENABLED=False
WEBSOCKET_PORT=8001

# -----------------------------------------------------------------------------
# Frontend Settings
# -----------------------------------------------------------------------------
STATIC_FILES_DIR=static
TEMPLATES_DIR=templates

# -----------------------------------------------------------------------------
# Pagination & Limits
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# -----------------------------------------------------------------------------
# File Upload Settings (für später)
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.xlsx,.xls,.csv

# -----------------------------------------------------------------------------
# Desktop App Integration Settings (Phase 9)
# -----------------------------------------------------------------------------
DESKTOP_API_ENABLED=False
DESKTOP_API_KEY=dev-desktop-api-key-change-for-production
