# =============================================================================
# HCC Plan Web Unified - Environment Configuration Template
# =============================================================================
# Kopiere diese Datei zu .env und fülle die Werte aus
# .env wird NICHT in Git committed (siehe .gitignore)

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=HCC Plan Web Unified
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Für Development: SQLite
DATABASE_URL=sqlite:///data/hcc_plan.sqlite

# Für Production: PostgreSQL (auskommentiert)
# DATABASE_URL=postgresql://username:password@localhost:5432/hcc_plan_db

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# WICHTIG: Generiere einen sicheren Secret Key für Production!
# Generierung: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# SMTP / E-Mail Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@hccplan.de
SMTP_FROM_NAME=HCC Plan System

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Für Development: Localhost erlauben
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Für Production: Nur Production-Domain
# CORS_ORIGINS=https://your-domain.com

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# APScheduler Settings
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=True
# Erinnerungs-E-Mails: Täglich um 08:00 Uhr
REMINDER_SCHEDULE_HOUR=8
REMINDER_SCHEDULE_MINUTE=0

# -----------------------------------------------------------------------------
# WebSocket Settings (für Phase 8)
# -----------------------------------------------------------------------------
WEBSOCKET_ENABLED=False
WEBSOCKET_PORT=8001

# -----------------------------------------------------------------------------
# Frontend Settings
# -----------------------------------------------------------------------------
STATIC_FILES_DIR=static
TEMPLATES_DIR=templates

# -----------------------------------------------------------------------------
# Pagination & Limits
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# -----------------------------------------------------------------------------
# File Upload Settings (für später)
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.xlsx,.xls,.csv

# -----------------------------------------------------------------------------
# Desktop App Integration Settings (Phase 9)
# -----------------------------------------------------------------------------
DESKTOP_API_ENABLED=False
DESKTOP_API_KEY=your-desktop-api-key-here
